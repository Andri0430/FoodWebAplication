@model Account

<h3 class="mb-4 text-xl font-medium text-gray-900 dark:text-white">Sign Up Account</h3>
<form class="space-y-6" id="register-form">
    <div class="flex flex-col items-start">
        <label asp-for="CompleteName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nama Lengkap</label>
        <input type="text" asp-for="CompleteName" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Your name" required>
        <span asp-validation-for="CompleteName" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
        <input type="email" asp-for="Email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="name@gmail.com" required>
        <span asp-validation-for="Email" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="Password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
        <input type="password" asp-for="Password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
        <span asp-validation-for="Password" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="PhoneNumber" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nomor Telepon</label>
        <input type="text" asp-for="PhoneNumber" id="phone-number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="08xxxxxxxxxxx" required>
        <span asp-validation-for="PhoneNumber" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="Province" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Provinsi</label>
        <select id="provinsi" asp-for="Province" class="block w-full p-2 mb-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
            <option selected>Pilih Provinsi</option>
        </select>
        <span asp-validation-for="Province" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="City" class="block text-sm font-medium text-gray-900 dark:text-white">Kota/Kabupaten</label>
        <select id="kota" asp-for="City" class="block w-full p-2 mb-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
            <option selected>Pilih Kota/Kabupaten</option>
        </select>
        <span asp-validation-for="City" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="Subdistrict" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Kecamatan</label>
        <select id="kecamatan" asp-for="Subdistrict" class="block w-full p-2 mb-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
            <option selected>Pilih Kecamatan</option>
        </select>
        <span asp-validation-for="Subdistrict" class="text-red-400 text-xs"></span>
    </div>
    <div class="flex flex-col items-start">
        <label asp-for="Ward" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Kelurahan</label>
        <select id="kelurahan" asp-for="Ward" class="block w-full p-2 mb-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <option selected>Pilih Kelurahan</option>
        </select>
        <span asp-validation-for="Ward" class="text-red-400 text-xs"></span>
    </div>
    <button type="submit" class="w-full text-white bg-orange-700 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-orange-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Register</button>
    <div class="text-sm font-medium text-center text-gray-500 dark:text-gray-300">
        have account? <a id="login" class="text-orange-700 hover:underline hover:cursor-pointer dark:text-orange-500">Login</a>
    </div>
</form>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script>
    $.ajax({
        url: "https://www.emsifa.com/api-wilayah-indonesia/api/provinces.json",
        method: "GET",
        dataType: "json",
        success: function (provinces) {
            var selectElement = $("#provinsi");
            $.each(provinces, function (index, province) {
                selectElement.append($('<option>', {
                    value: province.name,
                    text: province.name,
                    name : province.id
                }));
            });
        }
    });

    $('#provinsi').on("change", function() {
        var selectedProvince = $(this).find("option:selected").attr("name");
        $.ajax({
            url: "https://www.emsifa.com/api-wilayah-indonesia/api/regencies/"+selectedProvince+".json",
            method: "GET",
            dataType: "json",
            success: function (provinces) {
                var selectElement = $("#kota");
                selectElement.html('');
                $.each(provinces, function (index, province) {
                    selectElement.append($('<option>', {
                        value: province.name,
                        text: province.name,
                        name: province.id
                    }));
                });
            }
        });
    });

    $('#kota').on("change", function () {
        var selectedCity = $(this).find("option:selected").attr("name");
        $.ajax({
            url: "https://www.emsifa.com/api-wilayah-indonesia/api/districts/"+selectedCity+".json",
            method: "GET",
            dataType: "json",
            success: function (kec) {
                var selectedElement = $("#kecamatan");
                selectedElement.html('');
                $.each(kec, function (index, kecamatan) {
                    selectedElement.append($('<option>', {
                        value: kecamatan.name,
                        text: kecamatan.name,
                        name: kecamatan.id
                    }));
                });
            }
        });
    });

    $('#kecamatan').on("change", function () {
        var selectedDistrict = $(this).find("option:selected").attr("name");
        $.ajax({
            url: "https://www.emsifa.com/api-wilayah-indonesia/api/villages/" + selectedDistrict + ".json",
            method: "GET",
            dataType: "json",
            success: function (dis) {
                var selectedElement = $("#kelurahan");
                selectedElement.html('');
                $.each(dis, function (index, kelurahan) {
                    selectedElement.append($('<option>', {
                        value: kelurahan.name,
                        text: kelurahan.name,
                        name: kelurahan.id
                    }));
                });
            }
        });
    });

    $('document').ready(function () {
        $('#name').on('input', function () {
            this.value = this.value.replace(/[^A-Za-z\s]/g, '');
        });

        $('#phone-number').on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        $('#register-form').submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: "/Account/Register",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Good job!',
                            text: response.message,
                            icon: 'success',
                            showConfirmButton: true,
                            confirmButtonText: 'OK',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.reload();
                            }
                        });
                    }
                    else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message,
                            icon: 'error',
                            showConfirmButton: true,
                            confirmButtonText: 'OK',
                        });
                    }
                },
            });
        });

        $('#login').click(() => {
            $.ajax({
                type: 'GET',
                url: '/Home/PartialLogin',
                success: function (data) {
                    $('#dynamic-form').html(data);
                }
            })
        });
    });
</script>