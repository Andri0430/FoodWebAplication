@model List<Menu>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
@if (Model.Any())
{
    @foreach (var data in Model)
    {
        <div class="w-fit bg-white border border-gray-200 rounded-lg shadow hover:cursor-pointer dark:bg-gray-800 dark:border-gray-700">
            <a>
                <img class="p-4" src="http://localhost:5276/uploads/@data.Foto" />
            </a>
            <div class="px-5 pb-5">
                <div>
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">@data.Name</h5>
                </div>
                <div class="flex items-center justify-between w-full">
                    <span class="text-xl font-bold text-gray-900 dark:text-white">Rp.@data.Price</span>
                    <button type="button" data-toggle="modal" data-target="#myModal-@data.Id" class="text-white bg-orange-600 hover:bg-orange-800 focus:ring-4 focus:outline-none focus:ring-blue-300 p-2 rounded-md font-bold">Add to cart</button>
                    @await Html.PartialAsync("_PartialAddCart",data)
                </div>
            </div>
        </div>
    }
}
else
{
    <h1 class="w-full text-center font-bold text-4xl">Data tidak ditemukan...</h1>
}

<script>
    $('document').ready(function () {
        
    });
</script>

