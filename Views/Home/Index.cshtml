@{
    ViewData["Title"] = "Home";
}
<section class="bg-center bg-no-repeat bg-[url('http://localhost:5276/uploads/Jumbotoron.jpg')] bg-gray-400 bg-blend-multiply h-full overflow-hidden">
    <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">Eksplorasi Ragam Pizza Kami yang Menggugah Selera</h1>
        <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">"Selamat datang di Poke Pizza - tempat kelezatan pizza bertemu kreasi tak terbatas. Rasakan pizza terbaik dengan kami hari ini!"</p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
            <a href="/Menu" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-orange-600 hover:bg-orange-500 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
                Pesan Sekarang
                <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                </svg>
            </a>
            <a data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="inline-flex justify-center hover:text-gray-900 items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg border border-orange-600 hover:bg-gray-700 focus:ring-4 focus:ring-gray-400 hover:cursor-pointer">
                Masuk
            </a>
            <div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
                <div class="relative w-full max-w-md max-h-full">
                    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                        <div id="dynamic-form" class="px-6 py-6 lg:px-8">
                            @await Html.PartialAsync("_PartialLogin")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>